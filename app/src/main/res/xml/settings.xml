<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_theme_options" >

        <SwitchPreference
            android:defaultValue="false"
            android:title="@string/pref_dark_mode"
            android:key="dark_mode"/>

        <ListPreference
            android:defaultValue="Default"
            android:title="@string/pref_text_size"
            android:entries="@array/text_size"
            android:entryValues="@array/text_size"
            android:key="text_size"
            android:dialogTitle="@string/pref_text_size"/>
    </PreferenceCategory>
</PreferenceScreen>